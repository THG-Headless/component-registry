---
interface Props {
  radius: string;
}

const { radius } = Astro.props;
---

<div class="tab-content hidden" data-tab-content="border">
  <h2 id="border-radius" class="text-xl font-bold mb-4 text-zinc-100 pt-2">
    Border Radius
  </h2>
  <div class="mb-8">
    <label class="block text-sm font-medium mb-2 text-zinc-300">
      Border Radius
    </label>
    <div class="flex flex-col">
      <input
        type="text"
        value={radius}
        class="border border-zinc-700 rounded px-2 py-1 w-full mb-3 bg-zinc-800 text-zinc-300"
        data-radius-field
      />

      <!-- Bento Grid Preview -->
      <div class="bg-zinc-800 rounded border border-zinc-700 p-4">
        <div
          class="grid grid-cols-6 grid-rows-5 gap-3 w-full"
          style="aspect-ratio: 6/5;"
        >
          <!-- Large box -->
          <div
            class="col-span-4 row-span-3 bg-purple-500 radius-preview transition-all duration-400"
            style={`border-radius: ${radius};`}
          >
          </div>
          <!-- Small box -->
          <div
            class="col-span-2 row-span-2 bg-purple-400 radius-preview transition-all duration-400"
            style={`border-radius: ${radius};`}
          >
          </div>
          <!-- Medium box -->
          <div
            class="col-span-2 row-span-1 bg-purple-600 radius-preview transition-all duration-400"
            style={`border-radius: ${radius};`}
          >
          </div>
          <!-- Small horizontal box -->
          <div
            class="col-span-1 row-span-2 bg-purple-700 radius-preview transition-all duration-400"
            style={`border-radius: ${radius};`}
          >
          </div>
          <!-- Small vertical box -->
          <div
            class="row-span-2 col-span-3 bg-purple-300 radius-preview transition-all duration-400"
            style={`border-radius: ${radius};`}
          >
          </div>
          <!-- Small square -->
          <div
            class="bg-purple-800 radius-preview transition-all duration-400"
            style={`border-radius: ${radius};`}
          >
          </div>
          <div
            class="bg-purple-800 radius-preview transition-all duration-400"
            style={`border-radius: ${radius};`}
          >
          </div>
          <div
            class="bg-purple-800 radius-preview transition-all duration-400"
            style={`border-radius: ${radius};`}
          >
          </div>
          <div
            class="bg-purple-800 radius-preview transition-all duration-400"
            style={`border-radius: ${radius};`}
          >
          </div>
        </div>
      </div>

      <!-- Radius Presets -->
      <div class="mt-4">
        <label class="block text-sm font-medium mb-2 text-zinc-300">
          Presets
        </label>
        <div class="grid grid-cols-3 gap-2 w-full">
          <button
            class="radius-preset p-4 bg-zinc-800 text-zinc-300 rounded hover:bg-zinc-600 text-sm flex flex-col items-center cursor-pointer"
            data-radius="0"
          >
            <div class="size-16 bg-purple-500 mb-4"></div>
            <span>0</span>
          </button>
          <button
            class="radius-preset p-4 bg-zinc-800 text-zinc-300 rounded hover:bg-zinc-600 text-sm flex flex-col items-center cursor-pointer"
            data-radius="0.25rem"
          >
            <div class="size-16 bg-purple-500 mb-4 rounded-[0.25rem]"></div>
            <span>sm</span>
          </button>
          <button
            class="radius-preset p-4 bg-zinc-800 text-zinc-300 rounded hover:bg-zinc-600 text-sm flex flex-col items-center cursor-pointer"
            data-radius="0.5rem"
          >
            <div class="size-16 bg-purple-500 mb-4 rounded-[0.5rem]"></div>
            <span>md</span>
          </button>
          <button
            class="radius-preset p-4 bg-zinc-800 text-zinc-300 rounded hover:bg-zinc-600 text-sm flex flex-col items-center cursor-pointer"
            data-radius="0.75rem"
          >
            <div class="size-16 bg-purple-500 mb-4 rounded-[0.75rem]"></div>
            <span>lg</span>
          </button>
          <button
            class="radius-preset p-4 bg-zinc-800 text-zinc-300 rounded hover:bg-zinc-600 text-sm flex flex-col items-center cursor-pointer"
            data-radius="1rem"
          >
            <div class="size-16 bg-purple-500 mb-4 rounded-[1rem]"></div>
            <span>xl</span>
          </button>
          <button
            class="radius-preset p-4 bg-zinc-800 text-zinc-300 rounded hover:bg-zinc-600 text-sm flex flex-col items-center cursor-pointer"
            data-radius="1.25rem"
          >
            <div class="size-16 bg-purple-500 mb-4 rounded-[1.25rem]"></div>
            <span>2xl</span>
          </button>
        </div>
      </div>
    </div>
  </div>

  <script>
    import { setupOtherControls } from "./utils/otherLogic";

    document.addEventListener("DOMContentLoaded", () => {
      setupOtherControls();
    });
  </script>
</div>
